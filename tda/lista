CLASS Lista [elemento:ANY]
IMPORTS
    Natural
BASIC CONSTRUCTORS
    inicLista, agregarElemento
EFFECTIVE
TYPE
    Lista
OPERATIONS
    inicLista: -> Lista
    longLista: Lista -> Natural;
    agregarElemento: Lista(l) * Elemento -> Lista
    eliminarElemento: Lista(l) * Natural(i) -> Lista
        pre: (i >= 1) and (i <= longLista(l));
    obtenerElemento: Lista(l) -> Elemento
        pre: longLista(l) >= 1;
    obtenerSiguiente: Lista(l) -> Lista
        pre: longLista(l) >= 1;
AXIOMS l: Lista; e: Elemento; i,j: Natural;
    longLista(inicLista()) = 0;
    longLista(agregarElemento(l, e)) = 1 + longLista(l);
    (longLista(l) == j) => (eliminarElemento(agregarElemento(l, e), j) = l);
    (longLista(l) > j) => (eliminarElemento(agregarElemento(l, e), j) = agregarElemento(eliminarElemento(l, j), longLista(l)-1, e));
    (longLista(l) < j) => (eliminarElemento(agregarElemento(l, e), j) = agregarElemento(eliminarElemento(l, j-1), longLista(l), e));
    (longLista(l) < 1) => (obtenerElemento(agregarElemento(l, i, e)) = e);
    (longLista(l) >= 1) => (obtenerElemento(agregarElemento(l, e)) = obtenerElemento(l));
END-CLASS